<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBE1FA"
    tools:context=".task.day.TaskActivityDay2">


    <CheckBox
        android:id="@+id/box21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="36dp"
        android:text="CheckBox"
        app:layout_constraintBottom_toTopOf="@+id/box22"
        app:layout_constraintEnd_toEndOf="@+id/box22" />

    <CheckBox
        android:id="@+id/box22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="28dp"
        android:text="CheckBox"
        app:layout_constraintBottom_toTopOf="@+id/box23"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/box23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="CheckBox"
        app:layout_constraintBottom_toTopOf="@+id/box24"
        app:layout_constraintStart_toStartOf="@+id/box22" />

    <CheckBox
        android:id="@+id/box24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="CheckBox"
        app:layout_constraintBottom_toTopOf="@+id/box25"
        app:layout_constraintStart_toStartOf="@+id/box23" />

    <CheckBox
        android:id="@+id/box25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="CheckBox"
        app:layout_constraintBottom_toTopOf="@+id/save2"
        app:layout_constraintStart_toStartOf="@+id/box24" />

    <ProgressBar
        android:id="@+id/pb21"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="167dp"
        android:layout_height="32dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/box21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/save2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="97dp"
        android:text="save"
        android:background="#3282B8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>